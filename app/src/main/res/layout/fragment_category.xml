<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Category">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bahan Baku"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#808080"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="15dp"
                    >

                    <ImageView
                        android:id="@+id/one"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kunyit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="6dp"
                        android:text="Kunyit"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>





        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="15dp"
                >

                <ImageView
                    android:id="@+id/two"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/jahe"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:text="Jahe"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/three"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/kencur"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:text="Kencur"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="15dp"

                >

                <ImageView
                    android:id="@+id/four"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/temulawak"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="6dp"
                    android:text="Temulawak"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khasiat"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#808080"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/five"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#f05529"
            android:textColor="@color/white"
            android:fontFamily="@font/abril_fatface"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:text="Masuk Angin"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/six"
            android:text="Pegal-Pegal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:fontFamily="@font/abril_fatface"
            android:textSize="15sp"
            android:backgroundTint="#097150"
            android:background="@drawable/rounded"
            android:layout_below="@id/five"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat"/>
        <TextView
            android:id="@+id/seven"
            android:text="Stamina"
            android:backgroundTint="#f58850"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:fontFamily="@font/abril_fatface"
            android:textSize="15sp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded"
            android:layout_below="@id/six"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat"/>
        <TextView
            android:id="@+id/eight"
            android:text="Daya Tahan Tubuh"
            android:backgroundTint="#146f77"
            android:textColor="@color/white"
            android:fontFamily="@font/abril_fatface"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded"
            android:layout_below="@id/seven"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat"/>



    </RelativeLayout>




</LinearLayout>